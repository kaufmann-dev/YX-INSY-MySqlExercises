db.getCollection("facilities").drop();
db.createCollection("facilities", {
     validationLevel  : "strict",
     validationAction : "error",
     validator : {
           $jsonSchema : {
                bsonType : "object",
                required : [
                   "_id",
                   "name",
                   "code",
                   "projects"
                ],
                properties : {
                     _id   : {
                         bsonType : "objectId"
                     },
                     name : {
                         bsonType  : "string",
                         minLength : 3,
                         maxLength : 100
                     },
                     code : {
                         bsonType  : "string",
                     },
                     projects : {
                        bsonType : "array",
                        items : {
                           bsonType : "object",
                           required : ["project_id", "title"],
                           properties : {
                              project_id : {
                                 bsonType : "objectId"
                              },
                              title : {
                                 bsonType : "string"
                              }
                           }
                        }
                     }
                }
           }
     }
});


